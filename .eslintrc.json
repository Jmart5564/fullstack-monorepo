{
  "parserOptions": {
    "ecmaVersion": "latest",
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "requireConfigFile": false,
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["@babel"],
  "parser": "@babel/eslint-parser",
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "rules": {
    "eqeqeq": ["error", "always"],
    "no-console": ["warn", { "allow": ["info", "error"] }],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "ignoreComments": true
      }
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "semi": ["error", "always"],
    "space-in-parens": ["error"],
    "space-infix-ops": "error",
    "object-curly-spacing": ["error", "always"],
    "comma-spacing": "error",
    "eol-last": ["error", "always"],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "array-bracket-spacing": "error",
    "prefer-const": "error",
    "no-var": "error",
    "rest-spread-spacing": "error",
    "prefer-arrow-callback": "error",
    "object-shorthand": ["error", "always"]
  },
    "globals": {
      "QUnit": false,
      "before": false,
      "cy": false
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }

